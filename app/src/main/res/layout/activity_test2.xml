<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000ff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="me.jerry.framedemo.MainAppCompatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_add_txt"
            android:gravity="center"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_delete_txt"
            android:gravity="center"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_modify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_modify_txt"
            android:gravity="center"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_query_txt"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
